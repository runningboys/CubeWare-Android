<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/other_plat_login_tip_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/other_plat_login_tip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_space_24"
            android:layout_marginRight="@dimen/view_space_16"
            android:contentDescription="@null"
            android:src="@drawable/ic_little_windows"
            />

        <TextView
            android:id="@+id/other_plat_login_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Windows端已登录"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_14"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:background="#ededed"
        android:layout_marginLeft="@dimen/view_space_20"
        android:layout_marginRight="@dimen/view_space_20"/>
</LinearLayout>