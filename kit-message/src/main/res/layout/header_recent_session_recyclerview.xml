<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/recent_message_rl"
        android:layout_marginTop="@dimen/view_height_44"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height_40"
        android:layout_marginLeft="@dimen/view_space_18"
        android:layout_marginBottom="@dimen/view_space_10"
        >
        <TextView
            android:id="@+id/recent_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_msg_back"
            android:textColor="#26242a"
            android:textSize="32sp"
            android:textStyle="bold"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/recent_message_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_space_4"
            android:layout_marginLeft="@dimen/view_space_4"
            android:layout_toRightOf="@+id/recent_message_tv"
            android:layout_alignParentBottom="true"
            android:text="(未连接)"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <ProgressBar
            android:id="@+id/recent_message_pb"
            android:layout_width="@dimen/view_space_16"
            android:layout_height="@dimen/view_space_16"
            android:layout_marginTop="@dimen/view_space_2"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/cube_progress_small"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/recent_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/recent_message_pb"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:text="@string/connecting"
            android:layout_marginLeft="@dimen/view_space_8"
            android:visibility="gone"
            />
    </RelativeLayout>
    <include layout="@layout/include_no_network_tip"/>
    <include layout="@layout/include_other_plat_login_tip"/>
</LinearLayout>