<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:elevation="0dp">

    <cube.ware.widget.toolbar.CubeToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:progressDrawable="@drawable/cube_progress_small"
        app:progressHeight="@dimen/view_space_20"
        app:progressIndeterminate="true"
        app:progressMarginRight="@dimen/view_space_8"
        app:progressWidth="@dimen/view_space_20"
        app:titleTextColor="@color/primary_text"
        app:title_gravity="center" />
</android.support.design.widget.AppBarLayout>
