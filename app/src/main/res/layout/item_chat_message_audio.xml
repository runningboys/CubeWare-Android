<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:paddingBottom="@dimen/view_space_10"
    >

    <FrameLayout
        android:id="@+id/item_message_audio_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/item_message_audio_playing_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/empty"
            />

        <TextView
            android:id="@+id/item_message_audio_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:paddingLeft="@dimen/view_space_2"
            tools:text="aaa"
            android:textColor="@color/cube_primary_text"
            android:textSize="@dimen/text_size_14"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/item_message_audio_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_6"
        android:layout_marginRight="@dimen/view_space_6"
        android:layout_marginTop="@dimen/view_space_2"
        android:background="@drawable/shape_message_notify_point"
        android:contentDescription="@string/empty"
        android:focusable="false"
        android:visibility="gone"
        />

</LinearLayout>