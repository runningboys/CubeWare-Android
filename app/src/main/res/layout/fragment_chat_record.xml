<?xml version="1.0" encoding="utf-8"?>
<cube.ware.widget.voice.AudioRecordLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_245"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/btn_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_chat_record"
        />

    <cube.ware.widget.voice.AuditionButton
        android:id="@+id/img_playView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="18dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chat_record_audition"
        android:visibility="invisible"
        />

    <cube.ware.widget.voice.AuditionButton
        android:id="@+id/img_delView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="70dp"
        android:layout_marginRight="18dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chat_record_delete"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_space_24"
        android:text="按住说话"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/cube_secondary_text"
        android:textSize="@dimen/text_size_16"
        android:visibility="visible"
        />

    <cube.ware.widget.voice.HorVoiceView
        android:id="@+id/horvoiceview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/btn_record"
        android:visibility="gone"
        app:voiceLineColor="@color/cube_primary"
        app:voiceLineHeight="@dimen/view_space_2"
        app:voiceLineWidth="@dimen/view_space_18"
        app:voiceTextColor="@color/cube_secondary_text"
        />
</cube.ware.widget.voice.AudioRecordLayout>