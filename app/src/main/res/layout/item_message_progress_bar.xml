<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_progress_cover"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <cube.ware.widget.CubeProgressBar
        android:id="@+id/chat_progress_bar"
        android:layout_width="@dimen/view_space_40"
        android:layout_height="@dimen/view_space_40"
        android:layout_gravity="center"
        app:orientation="sector"
        app:sectorColor="#aaffffff"
        />
</LinearLayout>