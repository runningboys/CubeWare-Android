<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_bg"
    android:paddingBottom="@dimen/view_space_8"
    android:paddingLeft="@dimen/view_space_12"
    android:paddingTop="@dimen/view_space_8"
    >

    <CheckBox
        android:id="@+id/file_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_space_8"
        android:background="@null"
        android:clickable="false"
        android:visibility="visible"
        style="@style/CheckboxTheme"
        />
    <ImageView
        android:id="@+id/file_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/file_cb"
        android:contentDescription="@null"
        android:src="@drawable/ic_file_folder"
        />
    <TextView
        android:id="@+id/file_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_space_16"
        android:layout_marginRight="@dimen/view_space_16"
        android:layout_toRightOf="@+id/file_icon_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="文件夹"
        android:textColor="@color/cube_primary_text"
        android:textSize="@dimen/text_size_16"
        />
    <TextView
        android:id="@+id/file_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/file_name_tv"
        android:layout_below="@+id/file_name_tv"
        android:layout_marginTop="@dimen/view_space_2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="文件描述"
        android:textColor="@color/cube_secondary_text"
        android:textSize="@dimen/text_size_12"
        />
    <TextView
        android:id="@+id/file_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/file_name_tv"
        android:layout_marginRight="@dimen/view_space_12"
        android:layout_marginTop="@dimen/view_space_2"
        android:layout_toLeftOf="@+id/file_name_tv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="文件大小"
        android:textColor="@color/cube_assist_text"
        android:textSize="@dimen/text_size_10"
        />
</RelativeLayout>