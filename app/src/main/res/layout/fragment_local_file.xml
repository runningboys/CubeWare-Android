<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cube_primary_bg"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/director_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cube_primary_bg"
        android:ellipsize="end"
        android:paddingBottom="@dimen/view_space_4"
        android:paddingLeft="@dimen/view_space_16"
        android:paddingTop="@dimen/view_space_4"
        android:singleLine="true"
        android:text="手机"
        android:textColor="@color/cube_primary"
        android:textSize="@dimen/text_size_14"
        />

    <include layout="@layout/header_view_file_list"/>

    <include layout="@layout/include_divider_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/director_file_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <!--<include layout="@layout/include_divider_line"/>-->
    <!---->
    <!--<include layout="@layout/include_local_bottom"/>-->

</LinearLayout>